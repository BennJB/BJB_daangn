<% @title = "당근마켓 - 로그인" %>
<%= render 'layouts/devise_topbar' %>

<div class="container container-sm container-sign">
  <%= bootstrap_form_with(model: resource, url: session_path(resource_name), local: true, class: 'form-sign') do |f| %>
    <h5 class="form-headline">🥕 로그인 🐰</h5>
    <%= flash[:alert] %>
    <%= f.email_field :email, hide_label: true, placeholder: '이메일 입력', autofocus: true, autocomplete: "email" %>
    <%= f.password_field :password, hide_label: true, placeholder: '비밀번호 입력', autocomplete: "current-password" %>

    <%= button_tag '로그인 하기', class: 'btn btn-block btn-primary' %>
    <%= link_to '계정 만들기', new_registration_path(resource_name), class: 'btn btn-block btn-light' %>

    <h6 class="txt-terms">
      <a href="#">이용약관</a> 및 <a href="#">개인정보</a> 취급방침
    </h6>
  <% end %>
</div>