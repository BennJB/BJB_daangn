<% @title = "당근마켓 - 시작하기" %>
<%= render 'layouts/devise_topbar' %>

<div class="container container-sm container-sign">
  <%= bootstrap_form_with(model: resource, url: registration_path(resource_name), local: true, class: 'form-sign') do |f| %>
    <h5 class="form-headline">🍲 계정 만들기 🐇</h5>

    <%= f.email_field :email, required: true, hide_label: true, placeholder: '이메일 입력', autofocus: true, autocomplete: "email" %>
    <%= f.text_field :name, required: true, hide_label: true, placeholder: '이름 입력' %>
    <%= f.password_field :password, required: true, hide_label: true, placeholder: '비밀번호 입력', autocomplete: "new-password" %>
    <%= f.password_field :password_confirmation, required: true, hide_label: true, placeholder: '비밀번호 확인', autocomplete: "new-password" %>
    <%= button_tag '동의하고 시작하기', class: 'btn btn-block btn-primary' %>
    <%= link_to '로그인', new_user_session_path, class: 'btn btn-block btn-light' %>

    <h6 class="txt-terms"><a href="#">이용약관</a> 및 <a href="#">개인정보</a>취급방침</h6>
  <% end %>
</div>